{
    "name": "webignition/basil-compiler",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-compiler",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilCompiler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilCompiler\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=8",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "webignition/basil-compilable-source": ">=0.14,<1",
        "webignition/basil-models": ">=0.29,<1",
        "webignition/php-basil-compilable-source-factory": ">=0.16,<1"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-mockery": "^0.12.0",
        "phpunit/phpunit": "~8.0",
        "squizlabs/php_codesniffer": "3.*",
        "webignition/basil-parser": ">=0.20,<1"
    },
    "config": {
        "sort-packages": true
    }
}
